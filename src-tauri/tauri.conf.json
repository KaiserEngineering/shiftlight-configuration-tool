{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "KE ShiftLight",
		"version": "0.2.0"
	},
	"plugins": {
		"plugin_serial": {
			"baud_rate": 57600
		}
	},
	"tauri": {
		"allowlist": {
			"fs": {
				"all": true,
				"readFile": true
			},
			"dialog": {
				"open": true
			},
			"os": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "kaiserengineering.io",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": [
				"https://raw.githubusercontent.com/KaiserEngineering/shiftlight-configuration-tool/main/version.json"
			],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERCQTdCRTkyNDAwQzgwOUYKUldTZmdBeEFrcjZuMithK1BwQ3Zud2VEYlR3U2VBeFNpemRDNk9NRHIyRXVOTnJ5ZDVNaFFKSU4K"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "KE ShiftLight",
				"width": 800
			}
		]
	}
}